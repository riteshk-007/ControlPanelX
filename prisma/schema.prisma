generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  password       String
  phone          String?
  isAdmin        Boolean @default(false)
  domains        Domain[]
  hosting        Hosting[]
  dashboard      Dashboard[]
  cpanel         Cpanel[]
  adminSettings AdminSettings?
  payments       Payment[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Domain {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  purchasedAt String
  price       Float
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?  @db.ObjectId
}

model Hosting {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?   @db.ObjectId
  createdAt   String
  purchasedAt String
  price       Float
}

model Dashboard {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  user        User?   @relation(fields: [userId], references: [id])
  userId      String? @db.ObjectId
  loginUrl    String
  dashboardId String
  password    String
}

model Cpanel {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  user     User?   @relation(fields: [userId], references: [id])
  userId   String? @db.ObjectId
  cpanelId String
}
model AdminSettings {
 id           String @id @default(auto()) @map("_id") @db.ObjectId
 user         User?   @relation(fields: [userId], references: [id])
 userId       String? @db.ObjectId @unique
 razorpayKey String
 razorpaySecret String
}
model Payment {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  user     User?    @relation(fields: [userId], references: [id])
  userId   String?  @db.ObjectId
  amount   Float
  paidAt   DateTime @default(now())
}